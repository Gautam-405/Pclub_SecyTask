{
    "name": "Pingala Time Table",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A Chrome extension to display the current time and timetable of the required day with the feature of sending notifications if required.",
    "permissions": [
        "scripting",
        "notifications",
        "alarms",
        "storage",
        "activeTab"
      ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  